package ca.bcit.comp1510.lab05;

/**
 * Some math test thing.
 * @author Vincent Fung
 * @version 1.0
 */
public class Mathematics {
    /**
     * Constructor that helps make first, middle and last name.
     * @param d is for a double.
     * @return the area.
     */
    public double getCircleArea(double d) {
        double pPI = Math.PI;
        double a = pPI * Math.pow(d, 2);
        return a;
    }
    
    /**
     * Constructor that helps make first, middle and last name.
     * @param i is for the input.
     * @return the area.
     */
    public int sumOfInts(int i) {
        int sum = 0;
        
        if (i > 0) {
           sum = (i * (i + 1)) / 2;
        } else {
            sum = 0;
        }
        return sum;
    }

    public boolean isPositive(int i) {
        if (i >= 1) {
            return true;
        }
        return false;
    }

    public boolean isEven(int i) {
        if (i % 2 == 0) {
            return true;
        }
        return false;
    }


    public int sumOfEvens(int n) {
        int sum = 0;
        int s = 0;
        
        if (n != 0) {
            int i = s;
            while (i <= n) {
                if (i % 2 == 0) {
                    sum = sum + i;
                }
                i++;
            }
        } else {
            sum = 0;
        }
        
        if (n < 0) {
            sum = 0;
            int i = n;
            while (i <= 0) {
                if (i % 2 == 0) {
                    sum = sum + i;
                }
                
            }
        }
        return sum;
    }
}
