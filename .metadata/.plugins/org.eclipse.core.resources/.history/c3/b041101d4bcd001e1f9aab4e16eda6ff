package ca.bcit.comp1510.lab05;

/**
 * A program about a cube.
 * @author Vincent Fung
 * @version 1.0
 */
public class Cube {
    /** X coordinate. */
    private int xcoord;
    
    /** Y coordinate. */
    private int ycoord;

    /** Z coordinate. */
    private int zcoord;
    
    /** Radius. */
    private int edgeLength;
    
    /** Surface Area. */
    private double surfaceArea;
    
    /** Volume. */
    private double volume;
    
    /** Face Diagonal. */
    private double faceDiagonal;
    
    /** Space Diagonal. */
    private double spaceDiagonal;
    
    /** Surface Area Multiplier. */
    private double TWO = 2;
    
    /**
     * Constructor that calculates the area of a sphere.
     * @param 
     */
    public Cube(int newX, int newY, int newZ, int newEdgeLength) {
        xcoord = newX;
        ycoord = newY;
        zcoord = newZ;
        edgeLength = newEdgeLength;
    }
    
    /**
     * Sets x.
     * @param x an int
     */
    public void setX(int newX) {
        this.xcoord = newX;
    }
    
    /**
     * Sets y.
     * @param y an int
     */
    public void setY(int newY) {
        this.ycoord = newY;
    }
    
    /**
     * Sets z.
     * @param newZ an int
     */
    public void setZ(int newZ) {
        this.zcoord = newZ;
    }
    
    /**
     * Sets radius.
     * @param newEdgeLength an int
     */
    public void setEdgeLength(int newEdgeLength) {
        this.edgeLength = newEdgeLength;
    }

    /**
     * Returns x.
     * @return x as an int
     */
    public int getX() {
        return xcoord;
    }
    
    /**
     * Returns y.
     * @return y as an int
     */
    public int getY() {
        return ycoord;
    }
    
    /**
     * Returns z.
     * @return z as an int
     */
    public int getZ() {
        return zcoord;
    }
    
    /**
     * Returns edge length.
     * @return edge length as an int
     */
    public int getEdgeLength() {
        return edgeLength;
    }

    /**
     * Returns a String representation of this Die.
     * @return toString description
     */
    public double findSurfaceArea() {
        double six = (2 + 2 + 2);
        surfaceArea = (double) six * Math.pow(edgeLength, TWO);
        return surfaceArea;
    }
    
    /**
     * Returns a String representation of this Die.
     * @return toString description
     */
    public double findVolume() {
        double three = (1 +_2);
        volume = (double) Math.pow(edgeLength, three);
        return volume;
    }
    
    /**
     * Returns a String representation of this Die.
     * This needs decimal format.
     * @return toString description
     */
    public double findFaceDiagonal() {
        
        faceDiagonal = (double) Math.sqrt(TWO * edgeLength);
        return faceDiagonal;
    }
    
    /**
     * Returns a String representation of this Die.
     * This needs decimal format.
     * @return toString description
     */
    public double findSpaceDiagonal() {
        double three = 3;
        spaceDiagonal = (double) Math.sqrt(three * edgeLength);
        return faceDiagonal;
    }
    
    /**
     * Returns a String representation of this Die.
     * @return toString description
     */
    public String toString() {
        String result = "The surface area of the cube is: " + findSurfaceArea()
                + "\nThe volume of the cube is: " + findVolume()
                + "\nThe face diagonal of the cube is: " + findFaceDiagonal()
                + "\nThe space diagonal of the cube is: " + findSpaceDiagonal();
        return result;
    }
}
